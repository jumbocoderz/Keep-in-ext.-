{
    "name": "Keep in",
    "version": "1.0",
    "description": "Build an Extension to save Linkedin messages!",
    "background": {
        "scripts": [            
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_scripts/message_page.js",
                "content_scripts/main_page.js"
            ]
        }
    ],
    "browser_action":{
        "default_icon": {
            "16": "icons/logo_16x16.png",
            "32": "icons/logo_32x32.png",
            "48": "icons/logo_48x48.png",
            "128": "icons/logo_128x128.png"
          },
          "icons": {
            "16": "icons/logo_16x16.png",
            "32": "icons/logo_32x32.png",
            "48": "icons/logo_48x48.png",
            "128": "icons/logo_128x128.png"
          },
        "default_popup": "popup/popup.html",
        "deafult_title": "Keep in Messages"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "https://www.linkedin.com/*"
    ],
    "manifest_version": 2
}