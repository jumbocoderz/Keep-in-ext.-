{
    "name": "Keep in",
    "version": "1.0",
    "description": "Build an Extension to save Linkedin messages!",
    "background": {
        "scripts": [
            
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
            
                "message_page.js",
                "main_page.js"
            ]
        }
    ],
    "browser_action":{
        "default_icon": "icons8-messages-50.png",
        "default_popup": "popup.html",
        "deafult_title": "Keep in Messages"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "https://www.linkedin.com/*"
    ],
    "manifest_version": 2
}